{
  "name": "optiprompt-pro",
  "version": "0.1.0",
  "description": "AI-powered desktop assistant for seamless communication",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "tsc --noEmit && vite build && tsx scripts/postbuild.ts",
    "build:electron": "npm run build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 5173 --open",
    "serve": "serve dist"
  },
  "build": {
    "appId": "com.optiprompt.pro",
    "productName": "OptiPrompt Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.cjs"
    ],
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "node_modules/**/*.node",
      "dist/**/*"
    ],
    "protocols": [
      {
        "name": "OptiPrompt Pro Protocol",
        "schemes": [
          "optiprompt"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "OptiPrompt Pro URL",
            "CFBundleURLSchemes": [
              "optiprompt"
            ]
          }
        ],
        "CFBundleDocumentTypes": [],
        "LSApplicationCategoryType": "public.app-category.productivity"
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Productivity"
    }
  },
  "dependencies": {
    "@firebase/app-types": "^0.9.0",
    "@firebase/auth-types": "^0.12.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@shadcn/ui": "^0.0.4",
    "@types/axios": "^0.9.36",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "firebase": "^10.8.0",
    "framer-motion": "^11.0.8",
    "fs": "^0.0.1-security",
    "google-auth-library": "^8.9.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "lucide-react": "^0.344.0",
    "next": "^14.1.0",
    "ollama": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-i18next": "^15.4.0",
    "react-router-dom": "^6.22.2",
    "shadcn-ui": "^0.9.4",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.17.19",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
